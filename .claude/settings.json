{
  "enabledPlugins": {
    "beads@beads-marketplace": true
  },
  "hooks": {
    "SessionStart": [
      {
        "command": "CLAUDE_HOOK_EVENT=SessionStart .claude/hooks/log-activity.sh"
      }
    ],
    "PreToolUse": [
      {
        "command": "CLAUDE_HOOK_EVENT=PreToolUse .claude/hooks/log-activity.sh"
      }
    ],
    "PostToolUse": [
      {
        "command": "CLAUDE_HOOK_EVENT=PostToolUse .claude/hooks/log-activity.sh"
      }
    ],
    "PostToolUseFailure": [
      {
        "command": "CLAUDE_HOOK_EVENT=PostToolUseFailure .claude/hooks/log-activity.sh"
      }
    ],
    "Stop": [
      {
        "command": "CLAUDE_HOOK_EVENT=Stop .claude/hooks/log-activity.sh"
      },
      {
        "command": ".claude/hooks/stop-check-inbox.sh"
      }
    ]
  }
}
